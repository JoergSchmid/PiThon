{% extends 'base.jinja' %}

{% block title %}Profile{% endblock %}

{% block content %}

<div class="ctr">
    {% if session["username"] == null %}
    <form action='/login?current_page=profile' method='POST'>
        <input type='text' name='username' placeholder="Name"><br>
        <input type='password' name='password' placeholder="Password"><br>
        <input type='submit' value='Login'>
    </form><br><br>
    <form class='ctr' action='/register?current_page=profile' method='POST'>
        <input type='text' name='username' placeholder="Name"><br>
        <input type='password' name='password' placeholder="Password"><br>
        <input type='password' name='confirm_password' placeholder="Confirm Password"><br>
        <input type='submit' value='Register'>
    </form>
    {% else %}
    <p>Logged in as {{session["username"]}}</p>
    <input type="button" id="btn_logout" value="Logout" onclick="logout()">
    <input type="button" id="btn_delete" value="Delete account" onclick="delete_user()">
    {% endif %}
</div>


{% endblock %}
